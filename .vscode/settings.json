{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules/": true,
    },
    "search.exclude": {
        "**/node_modules": false,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    // updates closing html tag when opening tag is modified
    "editor.linkedEditing": true,
    "editor.foldingImportsByDefault": true,
    "editor.minimap.enabled": false,
    "editor.tabSize": 4,
    "files.autoSave": "onFocusChange",
}